{
  "name": "jobhopin",
  "description": "JobHopin - Central Admin Microservices",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "author": "JobHopin",
  "repository": {
    "type": "git",
    "url": "https://github.com/BaoTran1203/nodejs-monorepo.git"
  },
  "engines": {
    "node": ">=14"
  },
  "workspaces": [
    "packages/@baotg/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "chmod u+x ./bin/*",
    "ls": "lerna ls -la && nx print-affected",
    "dev": "lerna run dev",
    "build": "lerna run build",
    "serve": "lerna run serve",
    "test": "lerna run test",
    "e2e": "lerna run e2e",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "clean": "lerna run clean",
    "purge": "rimraf -rf ./node_modules && lerna run purge",
    "dep:upgrade": "lerna run --stream dep:upgrade",
    "graph": "nx affected:graph",
    "release": "lerna version",
    "published": "./bin/btg-publish.sh",
    "publish:dev": "lerna publish patch --exact --no-private --yes",
    "publish:stag": "lerna publish minor --exact --no-private --yes",
    "publish:prod": "lerna publish major --exact --no-private --yes",
    "deploy": "./bin/btg-deploy.sh",
    "deploy:dev": "lerna run deploy -- --ns baotg-develop --helm helm && ./bin/btg-post-deploy.sh",
    "deploy:stag": "lerna run deploy -- --ns baotg-staging --helm helm && ./bin/btg-post-deploy.sh",
    "deploy:prod": "lerna run deploy -- --ns baotg-production --helm helm && ./bin/btg-post-deploy.sh"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "lerna": "^5.6.2",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^13.0.3",
    "npm-check-updates": "^16.3.11",
    "nx": "^14.8.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.12.3",
    "rollup-plugin-async": "^1.2.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.1",
    "standard-version": "^6.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-immutable": "^5.5.2",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^4.3.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "{apps,src,libs,packages}/**/*.{ts,json}": [
      "yarn format",
      "yarn lint",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "**/node_modules/cz-conventional-changelog"
    }
  },
  "changelog": {
    "labels": {
      "feat": "New Feature",
      "fix": "Bug Fix",
      "build": "Build",
      "chore": "Publish",
      "ci": "Release",
      "docs": "Document",
      "perf": "Improve Perfomance",
      "refactor": "Refactor",
      "revert": "Revert Commit",
      "style": "Format Code",
      "test": "Test",
      "impl": "Implement"
    }
  }
}
