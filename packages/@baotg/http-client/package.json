{
  "name": "@baotg/http-client",
  "description": "JobHopin - Http Client Service",
  "version": "1.0.17",
  "private": false,
  "license": "UNLICENSED",
  "author": "JobHopin",
  "main": "dist/index",
  "types": "dist/index",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "purge": "rm -rf node_modules",
    "dev": "rollup -cw",
    "prebuild": "yarn clean",
    "build": "nest build -p tsconfig.json",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "dep:upgrade": "ncu -p yarn -f /^@baotg*/ -u"
  },
  "dependencies": {
    "@baotg/core": "1.0.17",
    "@nestjs/axios": "^0.1.0",
    "http-proxy-agent": "^5.0.0",
    "https-proxy-agent": "^5.0.1",
    "merge-deep": "^3.0.3",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@types/merge-deep": "^3.0.0"
  },
  "lint-staged": {
    "src/**": [
      "yarn format",
      "yarn lint",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHead": "b74397663527dd2bd67714cddaefe03c1b9112d2"
}
