{
  "name": "@baotg/example-micro",
  "description": "JobHopin - Example Microservice",
  "version": "0.1.0",
  "author": "JobHopin",
  "private": true,
  "license": "UNLICENSED",
  "files": [
    "dist",
    "bin",
    "config.yml",
    "migrations",
    "k8s",
    "Dockerfile"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "purge": "rm -rf node_modules",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "prebuild": "rimraf dist",
    "dev": "nest start --watch -p tsconfig.json",
    "debug": "cross-env NODE_ENV=development nest start --debug --watch -p tsconfig.json",
    "build": "nest build -p tsconfig.json",
    "start": "cross-env NODE_ENV=development nest start",
    "serve": "cross-env NODE_ENV=production node dist/main",
    "dep:upgrade": "ncu -p yarn -f /^@ynm*/ -u",
    "deploy": "echo \"Simulator deploy\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@baotg/core": "0.1.0",
    "@baotg/elastic": "0.1.0",
    "@baotg/graphql": "0.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node"
  }
}
